@model ACS.Shared.Models.Target

@{
    ViewData["Title"] = "Create Target";
}

<h1>Create</h1>

<h4>Target</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Enabled" checked /> @Html.DisplayNameFor(model => model.Enabled)
            </label>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="AgentName" class="control-label"></label>
            <input asp-for="AgentName" class="form-control" autofocus />
            <span asp-validation-for="AgentName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="AgentMinVersion" class="control-label"></label>
            <input asp-for="AgentMinVersion" class="form-control" />
            <span asp-validation-for="AgentMinVersion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="AgentMaxVersion" class="control-label"></label>
            <input asp-for="AgentMaxVersion" class="form-control" />
            <span asp-validation-for="AgentMaxVersion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="UserNamePattern" class="control-label"></label>
            <input asp-for="UserNamePattern" class="form-control" />
            <span asp-validation-for="UserNamePattern" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ActiveUserNamePattern" class="control-label"></label>
            <input asp-for="ActiveUserNamePattern" class="form-control" />
            <span asp-validation-for="ActiveUserNamePattern" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="HostNamePattern" class="control-label"></label>
            <input asp-for="HostNamePattern" class="form-control" />
            <span asp-validation-for="HostNamePattern" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="HostIpv4Cidr" class="control-label"></label>
            <input asp-for="HostIpv4Cidr" class="form-control" />
            <span asp-validation-for="HostIpv4Cidr" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="HostRolePattern" class="control-label"></label>
            <input asp-for="HostRolePattern" class="form-control" />
            <span asp-validation-for="HostRolePattern" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="EnvironmentNamePattern" class="control-label"></label>
            <input asp-for="EnvironmentNamePattern" class="form-control" />
            <span asp-validation-for="EnvironmentNamePattern" class="text-danger"></span>
        </div>
        <br />
        @{
            await Html.RenderPartialAsync("_FragmentSelectionList");
        }
        <div class="form-group fixed-bottom form-action-bar">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_TooltipScriptsPartial");
    }
}
